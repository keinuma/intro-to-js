{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-console": 0,
        "no-alert": 0,
        "no-debugger": 1,
        "no-regex-spaces": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": 2
    }
}